<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.assy.rishomon" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_rishomon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >

        </activity>
        <activity
            android:name=".ListActivity"
            android:label="@string/title_activity_list"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.assy.rishomon.MainActivity" />
        </activity>
        <activity
            android:name=".NewPersonActivity"
            android:label="@string/title_activity_new_person"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.assy.rishomon.MainActivity" />
        </activity>
        <activity
            android:name=".InPersonListActivity"
            android:label="@string/title_activity_in_person_list"
            android:parentActivityName=".ListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.assy.rishomon.ListActivity" />
        </activity>
        <activity
            android:name=".AddItemActivity"
            android:label="@string/title_activity_add_item"
            android:parentActivityName=".InPersonListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.assy.rishomon.InPersonListActivity" />
        </activity>
        <activity
            android:name=".ItemsActivity"
            android:label="@string/title_activity_items"
            android:parentActivityName=".InPersonListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.assy.rishomon.InPersonListActivity" />
        </activity>
        <activity
            android:name=".AddMoneyActivity"
            android:label="@string/title_activity_add_money"
            android:parentActivityName=".ListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.assy.rishomon.ListActivity" />
        </activity>
        <activity
            android:name=".ReportsActivity"
            android:label="@string/title_activity_reports"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.assy.rishomon.MainActivity" />
        </activity>
        <activity
            android:name=".ReportDayActivity"
            android:label="@string/title_activity_report_day"
            android:parentActivityName=".ReportsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.assy.rishomon.ReportsActivity" />
        </activity>
        <activity
            android:name=".ReportsAllActivity"
            android:label="@string/title_activity_reports_all" >
        </activity>
        <activity
            android:name=".ReportPayActivity"
            android:label="@string/title_activity_report_pay"
            android:parentActivityName=".ReportsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.assy.rishomon.ReportsActivity" />
        </activity>
        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/app_name" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
    </application>

</manifest>
