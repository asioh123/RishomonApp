<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.assy.rishomon.ItemsActivity"
    android:padding="0dp"
    android:background="@drawable/wood">

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/btnReportsDay"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="1" android:text="דוח יומי"
            android:layout_marginLeft="4dp"
            android:background="#00b8ff"
            android:layout_marginRight="2dp"
            android:textStyle="bold">
        </Button>
        <Button
            android:id="@+id/btnReportsAll"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:text="דוח כולל"
            android:background="#00b8ff"
            android:layout_marginRight="2dp"
            android:textStyle="bold">
        </Button>
        <Button
            android:id="@+id/btnReportsPay"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:text="דוח תשלומים"
            android:background="#00b8ff"
            android:layout_marginRight="4dp"
            android:textStyle="bold">
        </Button>

    </LinearLayout>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnBack"
        android:background="@null"
        android:src="@drawable/back_icon"
        android:focusable="false"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp" />

</RelativeLayout>
